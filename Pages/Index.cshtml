@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="container">
    <div class="pb-2" style="justify-self:right;">
        <a class="btn btn-success" asp-page="/Tasks/Create">New Task</a>
    </div>
    <nav>
        <div class="nav nav-tabs" id="nav-tab" role="tablist">
            <button class="nav-link active" id="nav-all-tab" data-bs-toggle="tab" data-bs-target="#nav-all" type="button" role="tab" aria-controls="nav-all" aria-selected="true">
                All Tasks
            </button>
            <button class="nav-link" id="nav-completed-tab" data-bs-toggle="tab" data-bs-target="#nav-completed" type="button" role="tab" aria-controls="nav-completed" aria-selected="false">
                Completed Tasks
            </button>
            <button class="nav-link" id="nav-pending-tab" data-bs-toggle="tab" data-bs-target="#nav-pending" type="button" role="tab" aria-controls="nav-pending" aria-selected="false">
                Pending Tasks
            </button>
        </div>
    </nav>
    <div class="tab-content" id="nav-tabContent border border-2">
        <div class="tab-pane fade show active" id="nav-all" role="tabpanel" aria-labelledby="nav-all-tab" tabindex="0">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Task</th>
                        <th>Due Date</th>
                        <th>Priority</th>
                        <th>Category</th>
                        <th>Completed</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Tasks)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.DueDate</td>
                            <td>@item.Priority</td>
                            <td>@item.Category.Name</td>
                            <td>@(item.IsComplete ? "Yes" : "No")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="tab-pane fade" id="nav-completed" role="tabpanel" aria-labelledby="nav-completed-tab" tabindex="0">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Task</th>
                        <th>Due Date</th>
                        <th>Priority</th>
                        <th>Category</th>
                        <th>Completed</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.TasksCompleted)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.DueDate</td>
                            <td>@item.Priority</td>
                            <td>@item.Category.Name</td>
                            <td>@item.IsComplete</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="tab-pane fade" id="nav-pending" role="tabpanel" aria-labelledby="nav-pending-tab" tabindex="0">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Task</th>
                        <th>Due Date</th>
                        <th>Priority</th>
                        <th>Category</th>
                        <th>Completed</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.TasksPending)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.DueDate</td>
                            <td>@item.Priority</td>
                            <td>@item.Category.Name</td>
                            <td>@(item.IsComplete ? "Yes" : "No")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
